<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:orientation="horizontal">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_constraintDimensionRatio="H,3:1"
            android:id="@+id/cv_banner"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/corner_radius"
            app:elevation="0dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.stx.xhb.androidx.XBanner
                    android:id="@+id/xb_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:AutoPlayTime="4500"
                    app:pageChangeDuration="800"
                    app:pointsVisibility="true"
                    app:pointsPosition="RIGHT"
                    app:tipTextSize="12sp"
                    app:clipChildrenTopBottomMargin="5dp"
                    app:isHandLoop="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:id="@+id/tv_banner_loading"
                    android:gravity="center"
                    android:text="加载失败，点击重试"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/cv_banner"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_join_room"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/main_card_height"
                app:cardCornerRadius="@dimen/dialog_corner_radius"
                app:elevation="0dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="@color/colorDialogBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginRight="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="50dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_lizi" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/mainCardShader"
                        android:paddingLeft="13dp"
                        android:paddingTop="13dp"
                        android:text="加入房间"
                        android:textColor="@color/blackLight2"
                        android:textSize="@dimen/main_card_key_text_size"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/cv_deck"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/dialog_corner_radius"
                        app:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="@color/colorDialogBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_card_bag"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_deck_main"
                                android:scaleType="fitCenter"
                                android:layout_width="48dp"
                                android:layout_height="48dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mainCardShader"
                                android:paddingLeft="13dp"
                                android:paddingTop="13dp"
                                android:text="卡组编辑"
                                android:textColor="@color/blackLight"
                                android:textSize="@dimen/main_card_text_size"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/cv_ai"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/dialog_corner_radius"
                        app:elevation="0dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="@color/colorDialogBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_alignParentRight="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitEnd"
                                android:src="@drawable/ic_image1" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="0dp"
                                android:layout_marginBottom="0dp"
                                android:background="@color/mainCardShader"
                                android:paddingLeft="13dp"
                                android:paddingTop="13dp"
                                android:text="残局/AI"
                                android:textColor="@color/blackLight"
                                android:textSize="@dimen/main_card_text_size"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/cv_loacl_duel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/dialog_corner_radius"
                        app:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="@color/colorDialogBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mainCardShader"
                                android:paddingLeft="13dp"
                                android:paddingTop="13dp"
                                android:text="本地对战"
                                android:textColor="@color/blackLight"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/cv_replay"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/dialog_corner_radius"
                        app:elevation="0dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="@color/colorDialogBackground">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitEnd"
                                android:src="@drawable/ic_replay" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/mainCardShader"
                                android:paddingLeft="13dp"
                                android:paddingTop="13dp"
                                android:text="决斗录像"
                                android:textColor="@color/blackLight"
                                android:textSize="@dimen/main_card_text_size"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/main_margin">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_start_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="开始游戏"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/pb_res_loading"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_start_s" />


            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="gone"
                android:id="@+id/iv_list_mode"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_add_setting"
                android:background="@drawable/click_window_background_radius"
                android:gravity="right"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_list" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_add_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/click_window_background_radius"
                android:gravity="right"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_edit_setting" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:id="@+id/rv_service_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>